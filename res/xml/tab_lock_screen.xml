<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.android.settingslib.widget.LayoutPreference
        android:key="top_header_image"
        android:layout="@layout/tab_header_lockscreen" />

    <com.android.settings.widget.CardPreference
        android:key="lockscreen_date_and_time_category"
        android:fragment="com.aquarios.coralreef.fragments.LockscreenDateTime"
        android:icon="@drawable/ic_lockscreen_clock_background"
        android:title="@string/lockscreen_date_and_time_title"
        android:summary="@string/lockscreen_date_and_time_summary" />

    <com.android.settings.widget.CardPreference
        android:key="lockscreen_weather"
        android:fragment="com.aquarios.coralreef.fragments.LockscreenWeather"
        android:icon="@drawable/ic_lockscreen_weather_background"
        android:title="@string/lock_screen_weather_title"
        android:summary="@string/lock_screen_weather_summary" />

    <com.android.settings.widget.CardPreference
        android:key="lockscreen_tuner"
        android:icon="@drawable/ic_lockscreen_tuner_background"
        android:title="@string/lockscreen_tuner_title">
        <intent android:action="com.android.settings.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.LockscreenActivity" />
    </com.android.settings.widget.CardPreference>

    <com.android.settings.widget.CardPreference
        android:key="lockscreen_general_category"
        android:fragment="com.aquarios.coralreef.fragments.LockscreenGeneral"
        android:icon="@drawable/ic_lockscreen_general_background"
        android:title="@string/lockscreen_general_title"
        android:summary="@string/lockscreen_general_summary" />

</PreferenceScreen>
