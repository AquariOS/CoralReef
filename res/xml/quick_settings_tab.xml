<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/qstiles_layout_title"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

  <PreferenceCategory
    android:title="@string/qstiles_category_title">

    <Preference
        android:key="quicksettings"
        android:fragment="com.aquarios.settings.fragments.QuickSettings"
        android:title="@string/qstiles_layout_title"
        android:summary="@string/qstiles_layout_summary" />

    <com.aquarios.settings.preference.SecureSettingSwitchPreference
        android:key="qs_easy_toggle"
        android:title="@string/qs_easy_toggle_title"
        android:summary="@string/qs_easy_toggle_summary"
        android:defaultValue="false" />

    <com.aquarios.settings.preference.SystemSettingSwitchPreference
        android:key="quick_settings_vibrate"
        android:title="@string/quick_settings_vibrate_title"
        android:summary="@string/quick_settings_vibrate_summary"
        android:defaultValue="false"/>

  </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/qs_omnijaws_category">

    <PreferenceScreen
        android:title="@string/weather_config_title"
        android:summary="@string/weather_config_summary" >
        <intent android:action="android.intent.action.MAIN"
                android:targetPackage="org.omnirom.omnijaws"
                android:targetClass="org.omnirom.omnijaws.SettingsActivityService" />
    </PreferenceScreen>

    <ListPreference
        android:key="weather_icon_pack"
        android:title="@string/weather_icon_pack_title"
        android:persistent="false" />

    </PreferenceCategory>

  <PreferenceCategory
     android:title="@string/qs_header_category_title">

    <com.aquarios.settings.preference.SecureSettingSwitchPreference
        android:key="qs_show_brightness"
        android:title="@string/qs_brightness_slider_title"
        android:summary="@string/qs_brightness_slider_summary"
        android:defaultValue="true"/>

    <com.aquarios.settings.preference.SystemSettingSwitchPreference
        android:key="qs_show_brightness_icon"
        android:title="@string/brightness_icon_title"
        android:summary="@string/brightness_icon_summary"
        android:defaultValue="false"/>

  </PreferenceCategory>

</PreferenceScreen>
